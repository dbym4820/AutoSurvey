{
  "name": "academic-paper-rss-system",
  "version": "2.0.0",
  "description": "学術論文RSS集約・AI要約システム（MySQL + 認証 + Vite + スケジューラー）",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "dev": "node server.js",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:frontend\"",
    "build": "cd frontend && npm run build",
    "preview": "cd frontend && npm run preview",
    "install:all": "npm install && cd frontend && npm install",
    "db:setup": "mysql -u root -p < database/schema.sql",
    "db:reset": "mysql -u root -p -e 'DROP DATABASE IF EXISTS academic_papers' && npm run db:setup",
    "user:create": "node scripts/create-user.js",
    "fetch:now": "node scripts/fetch-now.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.25.0",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "mysql2": "^3.6.5",
    "node-cron": "^3.0.3",
    "openai": "^4.20.0",
    "rss-parser": "^3.13.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "academic",
    "rss",
    "papers",
    "AI",
    "education",
    "research",
    "claude",
    "openai",
    "vite",
    "react"
  ],
  "author": "",
  "license": "MIT"
}
